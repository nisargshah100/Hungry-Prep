<h2>Questions</h2>

<%= link_to "Add a Question", new_admin_question_path %>
<table>
  <thead>
    <tr>
      <th>Question #</th>
      <th>Question</th>
      <th>&nbsp;</th>
    </tr>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.text %></td>
        <td><%= link_to 'Edit', edit_admin_question_path(question) %> | <%= link_to 'Delete', admin_question_path(question), method: :delete  %></td>
      </tr>
    <% end %>
  </thead>
</table